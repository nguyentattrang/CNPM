@model WebApp1.Models.Blog

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="container shadow p-4">
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <img class="img-fluid" src="@Model.Image" alt="@Model.Title">
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <h2>@Model.Title</h2>
                                    <p><strong>Ngày tạo:</strong> @Model.CreatedDate</p>
                                    <p><strong>Người tạo:</strong> @Model.CreatedBy</p>
                                    <p><strong>Liên kết bài viết:</strong> @Model.Alias</p>
                                    <p><strong>Mô tả:</strong> @Model.Description</p>
                                    <p><strong>Nội dung chi tiết:</strong> @Model.Detail</p>
                                    <div class="mt-4">
                                        <a href="javascript:history.back()" class="btn btn-lg btn-warning"><i class="bi bi-box-arrow-in-left"></i> Quay lại</a> |
                                        <a asp-area="Admin" asp-controller="Blogs" asp-action="Edit"
                                           asp-route-id="@Model.BlogID" class="btn btn-primary "
                                           title="Sửa thông tin "><i class="bi bi-pencil-square"></i> Chỉnh sửa</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>